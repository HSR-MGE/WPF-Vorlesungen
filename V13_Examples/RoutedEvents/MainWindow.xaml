<Window x:Class="RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        PreviewKeyDown="Window_OnPreviewKeyDown" KeyDown="Window_OnKeyDown">
    <Border PreviewKeyDown="Border_OnPreviewKeyDown" KeyDown="Border_OnKeyDown" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5">
        <StackPanel PreviewKeyDown="StackPanel1_OnPreviewKeyDown" KeyDown="StackPanel1_OnKeyDown">
            <TextBox PreviewKeyDown="TextBox1_OnPreviewKeyDown" KeyDown="TextBox1_OnKeyDown" Text="Textfeld 1"/>
            <StackPanel PreviewKeyDown="StackPanel2_OnPreviewKeyDown" KeyDown="StackPanel2_OnKeyDown" Margin="0, 10">
                <TextBox PreviewKeyDown="TextBox2_OnPreviewKeyDown" KeyDown="TextBox2_OnKeyDown" Text="Textfeld 2" />
                <Button PreviewKeyDown="Button_OnPreviewKeyDown" KeyDown="Button_OnKeyDown" Content="Button" Margin="0, 10" />
            </StackPanel>
        </StackPanel>
    </Border>

</Window>
