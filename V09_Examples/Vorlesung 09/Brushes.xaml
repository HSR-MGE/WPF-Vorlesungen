<Window x:Class="Vorlesung_09.Brushes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Brushes" 
        Height="200" 
        Width="200">
    <StackPanel Margin="10">

        <Button Content="Solid Color Brush"
                Foreground="#ffffff"
                Background="DarkMagenta"
                Height="50" />

        <Button Content="Linear Gradient Brush" 
                Foreground="White"
                Height="50"
                Margin="0,20">
            <Button.Background>
                <LinearGradientBrush 
                    StartPoint="0,0"
                    EndPoint="0,1">
                    <GradientStop Offset="0" Color="Purple" />
                    <GradientStop Offset="0.5" Color="MediumPurple" />
                    <GradientStop Offset="1" Color="Purple" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </StackPanel>
</Window>
